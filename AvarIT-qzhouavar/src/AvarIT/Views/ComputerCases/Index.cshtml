@model IEnumerable<AvarIT.Models.ITInventoryModels.ComputerCase>

@{
    ViewData["Title"] = "Index";
}


<div>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index?#page">Home</a></li>
        <li class="active">Computer Case</li>
    </ol>
</div>
<div >
    <h3>Computer Case<a href="~/ComputerCases/Create?#page">&nbsp;<i class="fa fa-plus-circle blue"></i></a></h3>
    <hr class="style1">
</div>

<table id="computercase" class="table table-striped table-bordered dt-responsive" width="100%">
    <thead>
        <tr>

            <th>
                Avar #
            </th>
            <th>
                @*Assigned*@ User
            </th>
            <th>
                Office @*Location*@
            </th>
            <th>
                Brand
            </th>
            <th>
                Serial No
            </th>

            <th>
                Model Series
            </th>
            <th>
                Model No
            </th>

            <th>Actions</th>
            <th hidden>
                ID
            </th>

            <th hidden>
                Machine Name
            </th>

            <th hidden>
                Model Series
            </th>
            <th hidden>
                Model No
            </th>
            <th hidden>
                Screen Size (Laptop)
            </th>
            <th hidden>
                CPU Type
            </th>
            <th hidden>
                CPU Frequency
            </th>
            <th hidden>
                Memory Size
            </th>
            <th hidden>
                HDD Size
            </th>
            <th hidden>
                OEM Operating System
            </th>
            <th hidden>
                OEM License
            </th>
            <th hidden>
                Upgraded To
            </th>
            <th hidden>
                Upgrade License
            </th>
            <th hidden>
                LAN MAC
            </th>
            <th hidden>
                WLAN MAC
            </th>
            <th hidden>
                Order No
            </th>
            <th hidden>
                Date of Purchase
            </th>
            <th hidden>
                Warranty
            </th>
            <th hidden>
                Total Cost
            </th>
            <th hidden>
                Retired?
            </th>
            <th hidden>
                Notes
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.AvarTagNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ModelSeries)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelNo)
                </td>

                <td>

                    <a style="color:green" href="~/ComputerCases/Details/@item.ID?#page">
                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                        <small>Details</small>
                    </a>&nbsp;
                    <a style="color:blue" href="~/ComputerCases/Edit/@item.ID?#page">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        <small>Edit</small>
                    </a>&nbsp;
                    <a style="color:red" href="javascript:confirmDelete(@item.ID)">
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        <small>Delete</small>
                    </a>        
                </td>
               
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>

                <td hidden>
                    @Html.DisplayFor(modelItem => item.MachineName)
                </td>

                <td hidden>
                    @Html.DisplayFor(modelItem => item.ModelSeries)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ModelNo)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.LaptopScreenSize)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.CPUType)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.CPUFrequency)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.MemorySize)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.HDDSize)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.OEMOperatingSystem)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.OEMLicense)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.UpgradedTo)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.UpgradeLicense)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.LANMAC)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.WLANMAC)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.OrderNo)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Warranty)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Retired)
                    @if (item.Retired == true)
                    {
                        <a>Yes</a>
                    }
                    else
                    {
                        <a>No</a>
                    }
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="deleteLabel">Deleting a Computer Case</h4>
            </div>
            <div class="modal-body">
                <p>You have selected to delete this computer case.</p>
                <p>
                    If this was the action that you wanted to do,
                    please confirm your choice, or cancel and return
                    to the page.
                </p>
                <form asp-action="Delete" id="notificationForm">
               
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteConfirm">Delete</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        var readUrl = '@Url.Action("MarkNotificationAsRead")';

        var currentNotificationId;

        function confirmDelete(id) {
            currentNotificationId = id;
            $('#deleteConfirmModal').modal('show');
            $("body").css('padding-right', '0px');
        }

        $(function () {
            $("#deleteConfirmModal").on('click', "#deleteConfirm", function () {
                var deleteUrl = '@Url.Action("Delete")' + "/" + currentNotificationId;
                //alert(currentNotificationId+"    "+deleteUrl);
                $("#notificationForm").attr('action', deleteUrl).submit();
            });
        });

        AddAntiForgeryToken = function (data) {
            data.__RequestVerificationToken = $('input[name=__RequestVerificationToken]').val();
            return data;
        };

    </script>
}

@model AvarIT.Models.InventoryViewModels.EmployeeComputerCaseViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="ComputerCases" asp-action="Index" method="get">
    <p>
            <select asp-for="userId" class="form-control" asp-items="Model.users">
                // create a dropdown list
                <option value="">All</option>
            </select>

        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
               Assigned User
            </th>
            <th>
                @Html.DisplayNameFor(model => model.computerCases[0].EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.computerCases[0].AvarTagNumber)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.computerCases) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvarTagNumber)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

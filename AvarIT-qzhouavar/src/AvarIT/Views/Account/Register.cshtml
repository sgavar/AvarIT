@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"].</h2>

 



<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal col-sm-offset-3 col-md-offset-3">
    <h4>Create a new account.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    



    <fieldset class="well well-lg col-sm-9 col-md-9">
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label sr-only"></label>
      
                <div class="input-group">
                    <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                    <input asp-for="Email" class="form-control input-lg" placeholder="Email Address" autofocus />
                </div>
            <div class="col-md-2"></div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label sr-only"></label>
            <div class="input-group">
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                <input asp-for="Password" class="form-control input-lg" placeholder="Password" />

            </div>
            <div class="col-md-2"></div>
            <span asp-validation-for="Password" class="text-danger"></span>
          
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-md-2 control-label sr-only"></label>
            <div class="input-group ">
                <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                <input asp-for="ConfirmPassword" class="form-control  input-lg " placeholder="Confirm Password" />

            </div>
            <div class="col-md-2"></div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <input type="submit" class="btn btn-success" value="Sign Up " />  
        </div>
    </fieldset>

</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

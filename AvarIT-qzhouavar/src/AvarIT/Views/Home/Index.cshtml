            </div>

        </div>

    </div>
</div>

<div class="panel panel-info">
    <div class="panel-heading"><a data-toggle="collapse" href="#collapse2" style="font-size:20pt">Accounting Inventory</a></div>
    <div id="collapse2" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="well top-block ">
                            <a asp-controller="Employees" asp-action="Index">
                                <i class="fa fa-laptop blue"></i>
                                <div>Computers</div>
                            </a>
                            <a asp-controller="Computers" asp-action="Create"><div><i class="glyphicon glyphicon-plus-sign blue"></i></div></a>
                            <span class="notification">@ViewData["ComputerCount"]</span>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="well top-block ">
                            <a asp-controller="OfficeEquipments" asp-action="Index">
                                <i class="glyphicon glyphicon-phone-alt green"></i>
                                <div>Office Equipments</div>
                            </a>
                            <a asp-controller="OfficeEquipments" asp-action="Create"><div><i class="glyphicon glyphicon-plus-sign green"></i></div></a>
                            <span class="notification">@ViewData["OfficeEquipmentCount"]</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="well top-block ">
                            <a asp-controller="OfficeFurnitures" asp-action="Index">
                                <i class="fa fa-television  yellow"></i>
                                <div>Office Furnitures</div>
                            </a>
                            <a asp-controller="OfficeFurnitures" asp-action="Create"><div><i class="glyphicon glyphicon-plus-sign yellow"></i></div></a>
                            <span class="notification">40253.12</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

<script src="~/lib/Chart.js/dist/Chart.js"></script>
@section Scripts {
<script type="text/javascript">
            var barChartData = {
                labels: ["Computer Case", "Monitor", "Network", "Printer", "Miscellaneous", "Web Compatibility Issues"],
                datasets: [{
                    label: '',
                    backgroundColor: [
                      'rgba(255, 99, 132, 0.2)',
                      'rgba(54, 162, 235, 0.2)',
                      'rgba(255, 206, 86, 0.2)',
                      'rgba(75, 192, 192, 0.2)',
                      'rgba(153, 102, 255, 0.2)',
                      'rgba(255, 159, 64, 0.2)',
                      'rgba(255, 99, 132, 0.2)',
                      'rgba(54, 162, 235, 0.2)',
                      'rgba(255, 206, 86, 0.2)',
                      'rgba(75, 192, 192, 0.2)',
                      'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)',
                         'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 2,
                    data: [@ViewData["ComputerCaseCount"],  @ViewData["MonitorCount"],  @ViewData["NetworkCount"], @ViewData["PrinterCount"],   @ViewData["MiscellaneousCount"],  @ViewData["IssuesCount"]]
                }
                ]
            };


            var ctx = document.getElementById("canvas").getContext("2d");
            var bg = new Image();
            bg.onload = function () {
                ctx.drawImage(bg, 0, 0);

            }
            bg.src == "~/images/stop.jpg";

            Chart.defaults.bar.scales.xAxes[0].categorySpacing = 0;
            window.myBar = new Chart(ctx, {
                type: 'bar',
                data: barChartData,

                options: {

                    scales: {
                        xAxes: [{
                            barPercentage: 0.8,
                            ticks: {
                                fontSize: 13
                            },
                            gridLines: {
                                drawOnChartArea: false
                            },
                        }],


                    },

                    title: {
                        display: true,
                        text: 'IT Inventory Statistics',
                        fontSize: 26
                    },
                    legend: {
                        display: false,
                    },
                }
                    });

</script>
                  
}
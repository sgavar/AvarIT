                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <img src="~/images/miscellaneous.png" width="80" />
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewData["MiscellaneousCount"]</div>
                                    <div><a asp-controller="Miscellaneous" asp-action="Create" style="color:white">New Miscellaneous!</a></div>

                                </div>
                            </div>
                        </div>
                        <a asp-controller="Miscellaneous" asp-action="Index">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>

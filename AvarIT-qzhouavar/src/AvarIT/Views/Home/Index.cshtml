                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 pull-right col-xs-12" >
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">

                                    <img src="~/images/router.png" width="70" />
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewData["NetworkCount"]</div>
                                    <div><a asp-controller="Networks" asp-action="Create" style="color:white">New Network!</a></div>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="Networks" asp-action="Index">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 pull-right col-xs-12">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <img src="~/images/printer.png" width="70" />
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div class="huge">@ViewData["PrinterCount"]</div>
                                    <div><a asp-controller="Printers" asp-action="Create" style="color:white">New Printer!</a></div>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="Printers" asp-action="Index">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
